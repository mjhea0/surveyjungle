<h1>Create your survey</h1>

<div class="survey">
  <form id="survey_form" action="/survey" method="post">
    <input type="text" name="title" placeholder="Survey Title"><br><br>
    <textarea type="text" name="description"></textarea><br>    
    <input type="submit" value="Create a Survey">    
  </form>
</div>



<div class="question">

  <form id="question_form" action='/survey' method='post'>

    <div>
      <ol id="addinput">
        <span id="question_add">
          <p><li><input id="question" type="text" name="question_new"  placeholder="Question"><a href="#" id="addQuestion">Add Question</a></li></p>
        </span>
        <span id="choice_add"
          <input id="choice" type="text" name="choice_new" placeholder="Choice"><a href="#" id="addChoice">Add Choice</a>
        </span>
      </ol>
    </div>

  </form>
  
</div>

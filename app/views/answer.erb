<div class="container">
  <div id="answer">
    <% @surveys.each_with_index do |survey, i| %>
    <% if i % 8 == 0 %>
    <div class="row">
      <% end %>
    <a href="/participation/<%= survey.id %>">
      <div class="survey-answer">
        <h3><%= survey.title %><%= survey.user_id %></h3>
        <img src="../images/answer.jpg">
        <p><%= survey.description %></p>
        </div>
    </a>
    <% if i % 8 == 7 %>
    </div>
      <% end %>
    <% end %>
  </div>
</div>